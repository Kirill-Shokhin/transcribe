FROM python:3.11-slim

WORKDIR /app

RUN pip install --no-cache-dir \
    fastapi>=0.115 \
    uvicorn[standard]>=0.34 \
    python-multipart>=0.0.9 \
    redis>=5.0 \
    aiofiles>=24.1 \
    aiosqlite>=0.20 \
    pydantic-settings>=2.7

COPY src/ ./src/

RUN mkdir -p uploads

EXPOSE 8001

CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8001"]
